{
  "manifest_version": 3,
  "name": "WebSnap - Screenshot Extension",
  "version": "1.0",
  "description": "Take screenshots of visible or full webpage.",
  "permissions": ["activeTab", "downloads", "scripting", "offscreen"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}